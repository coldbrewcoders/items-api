{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "index.d.ts",
    ],
    "paths": {
      "*": [
        "node_modules/*",
      ]
    }
  },
  "include": [
    "services/**/*",
  ]
}